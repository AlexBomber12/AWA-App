rules:
  - key: roi
    description: "ROI below threshold for N days."
    enabled: true
    schedule_cron: "*/5 * * * *"
    thresholds:
      min_roi: 5
      min_days: 30
    channels:
      telegram: true

  - key: price_increase_pct
    description: "Purchase price increases beyond configured percent."
    enabled: true
    schedule_cron: "*/10 * * * *"
    thresholds:
      grow_pct: 10
    channels:
      telegram: true

  - key: buybox_drop_pct
    description: "Buy Box price drops abruptly."
    enabled: true
    schedule_cron: "*/15 * * * *"
    thresholds:
      drop_pct: 15
    channels:
      telegram: true

  - key: returns_rate_pct
    description: "High return ratio for recent orders."
    enabled: true
    schedule_cron: "0 * * * *"
    thresholds:
      returns_pct: 5
    channels:
      telegram: true

  - key: stale_price_days
    description: "Vendors without fresh price lists."
    enabled: true
    thresholds:
      stale_days: 30
    channels:
      telegram: true
